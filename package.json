{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "homee",
  "title": "homee",
  "description": "Control your smart home with homee.",
  "icon": "app.png",
  "author": "timoclsn",
  "license": "MIT",
  "commands": [
    {
      "name": "groups",
      "title": "Groups",
      "subtitle": "homee",
      "description": "Control your Groups.",
      "icon": "groups.png",
      "mode": "view"
    },
    {
      "name": "devices",
      "title": "Devices",
      "subtitle": "homee",
      "description": "Control your Devices.",
      "icon": "devices.png",
      "mode": "view"
    },
    {
      "name": "homeegrams",
      "title": "Homeegrams",
      "subtitle": "homee",
      "description": "Control your Homeegrams.",
      "icon": "homeegrams.png",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "get-groups",
      "title": "Get Groups",
      "description": "Get all Groups."
    },
    {
      "name": "control-group",
      "title": "Control Group",
      "description": "Control a Group."
    }
  ],
  "preferences": [
    {
      "name": "homeeId",
      "type": "textfield",
      "required": true,
      "title": "homeeID",
      "description": "Your homee ID",
      "placeholder": "Enter your homee ID."
    },
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your homee Access Token",
      "placeholder": "Enter your homee Access Token."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "~22.13.5",
    "@types/react": "^19.0.10",
    "@types/ws": "^8.5.14",
    "eslint": "^8.57.0",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "prettier": "prettier --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "format": "npm run prettier -- --write"
  }
}
