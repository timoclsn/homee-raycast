{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "homee",
  "title": "homee",
  "description": "Control your smart home with homee.",
  "icon": "app.png",
  "author": "timoclsn",
  "license": "MIT",
  "commands": [
    {
      "name": "groups",
      "title": "Groups",
      "subtitle": "homee",
      "description": "Control your Groups.",
      "icon": "groups.png",
      "mode": "view"
    },
    {
      "name": "devices",
      "title": "Devices",
      "subtitle": "homee",
      "description": "Control your Devices.",
      "icon": "devices.png",
      "mode": "view"
    },
    {
      "name": "homeegrams",
      "title": "Homeegrams",
      "subtitle": "homee",
      "description": "Control your Homeegrams.",
      "icon": "homeegrams.png",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "homeeId",
      "type": "textfield",
      "required": true,
      "title": "homeeID",
      "description": "Your homee ID",
      "placeholder": "Enter your homee ID."
    },
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your homee Access Token",
      "placeholder": "Enter your homee Access Token."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "node-fetch": "^3.2.10",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@types/node": "~18.8.3",
    "@types/react": "^18.0.21",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "react-devtools": "^4.26.0",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "prettier": "prettier --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "format": "npm run prettier -- --write"
  }
}
