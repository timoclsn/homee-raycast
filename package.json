{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "homee",
  "title": "homee",
  "description": "Control your smart home with homee.",
  "icon": "command-icon.png",
  "author": "timoclsn",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "homee Control",
      "description": "Control your smart home with homee.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "homeeId",
      "type": "textfield",
      "required": true,
      "title": "homeeID",
      "description": "Your homee ID",
      "placeholder": "Enter your homee ID."
    },
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your homee Access Token",
      "placeholder": "Enter your homee Access Token."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0",
    "node-fetch": "^3.1.0",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "prettier": "prettier --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "format": "npm run prettier -- --write"
  }
}
